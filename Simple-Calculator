#Simple Greetings
print("welcome to my humble calculator")
input("press enter to continue...")

#chose an operator
task = input("please input your operator (+, -, *, /): ")

number1 = float(input("number 1: "))
number2 = float(input("number 2: "))
result = None

if task == "+":
    result = number1 + number2
elif task == "-":
    result = number1 - number2
elif task == "*":
    result = number1 * number2
elif task == "/":
    if number2 != 0:
        result = number1 / number2
    elif number1 != 0:
        hasil = number2 / number1
    else:
        print("we can divide by zero, :( ...")
else:
    print("wrong number... ")

if result is not None:
    print(f"the result is : {result}")
